<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardView.Light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_15_dp"
    android:layout_marginEnd="@dimen/margin_10_dp"
    android:layout_marginStart="@dimen/margin_10_dp"
    android:layout_marginTop="@dimen/margin_15_dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="@dimen/margin_10_dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layoutCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_post_sponsored"
        android:padding="@dimen/margin_5_dp">

        <ImageView
            android:id="@+id/imagePost"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_description_image_post"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="H,16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/com_facebook_button_background" />

        <TextView
            android:id="@+id/textSponsoredLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_post_label_sponsored"
            android:padding="@dimen/margin_10_dp"
            android:text="@string/post_sponsored"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_10_sp"
            app:layout_constraintEnd_toEndOf="parent" />

        <RelativeLayout
            android:id="@+id/layoutPostDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="@dimen/margin_15_dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imagePost">

            <TextView
                android:id="@+id/textPostTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingBottom="@dimen/margin_5_dp"
                android:textAppearance="@style/TextAppearance.Bold"
                android:textColor="@color/black_202020"
                android:textSize="@dimen/text_size_12_sp"
                android:textStyle="bold"
                tools:text="Maionese Vigor" />

            <TextView
                android:id="@+id/textPostValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingTop="@dimen/margin_5_dp"
                android:textAppearance="@style/TextAppearance.Bold"
                android:textColor="@color/green_54983A"
                android:textSize="@dimen/text_size_14_sp"
                android:textStyle="bold"
                tools:text="R$ 0,89" />

            <LinearLayout
                android:id="@+id/layoutLikePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_15_dp"
                android:layout_marginRight="@dimen/margin_15_dp"
                android:layout_toLeftOf="@id/layoutDislikePost"
                android:layout_toStartOf="@id/layoutDislikePost"
                android:background="@drawable/ic_post_action_layout_background_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_10_dp"
                android:paddingEnd="@dimen/margin_5_dp"
                android:paddingLeft="@dimen/margin_5_dp"
                android:paddingRight="@dimen/margin_5_dp"
                android:paddingStart="@dimen/margin_5_dp"
                android:paddingTop="@dimen/margin_10_dp"
                tools:ignore="RelativeOverlap">

                <ImageView
                    android:id="@+id/imagePostLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_5_dp"
                    android:layout_marginRight="@dimen/margin_5_dp"
                    android:background="@drawable/ic_post_action_icon_selector"
                    android:contentDescription="@string/content_description_image_post_like" />

                <TextView
                    android:id="@+id/textPostLikeQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Bold"
                    android:textColor="@drawable/ic_post_action_text_selector"
                    android:textSize="@dimen/text_size_15_sp"
                    android:textStyle="bold"
                    tools:text="99" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutDislikePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_post_action_layout_background_selector"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_10_dp"
                android:paddingEnd="@dimen/margin_5_dp"
                android:paddingLeft="@dimen/margin_5_dp"
                android:paddingRight="@dimen/margin_5_dp"
                android:paddingStart="@dimen/margin_5_dp"
                android:paddingTop="@dimen/margin_10_dp">

                <ImageView
                    android:id="@+id/imagePostDislike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_5_dp"
                    android:layout_marginRight="@dimen/margin_5_dp"
                    android:background="@drawable/ic_post_action_icon_selector"
                    android:contentDescription="@string/content_description_image_post_dislike" />

                <TextView
                    android:id="@+id/textPostDislikeQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Bold"
                    android:textColor="@color/gray_4A4A4A"
                    android:textSize="@dimen/text_size_15_sp"
                    android:textStyle="bold"
                    tools:text="12" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/gray_F8F8F8"
            android:padding="@dimen/margin_15_dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutPostDetail">

            <ImageView
                android:id="@+id/imageUserAvatar"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/content_description_image_user_avatar"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_profile" />

            <LinearLayout
                android:id="@+id/layoutUserPostDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_15_dp"
                android:layout_marginLeft="@dimen/margin_15_dp"
                android:layout_marginRight="@dimen/margin_15_dp"
                android:layout_marginStart="@dimen/margin_15_dp"
                android:layout_toEndOf="@id/imageUserAvatar"
                android:layout_toLeftOf="@id/imageUserOptions"
                android:layout_toRightOf="@id/imageUserAvatar"
                android:layout_toStartOf="@id/imageUserOptions"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Bold"
                    android:textColor="@color/black_202020"
                    android:textSize="@dimen/text_size_10_sp"
                    android:textStyle="bold"
                    tools:text="Nome do usuário" />

                <TextView
                    android:id="@+id/textPostTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Regular"
                    android:textColor="@color/gray_9B9B9B"
                    android:textSize="@dimen/text_size_10_sp"
                    tools:text="10 minutos atrás" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageUserOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/content_description_image_user_options"
                android:padding="@dimen/margin_10_dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_post_user_options" />

        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>