<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_alignParentTop="true"
    android:background="@color/colorPrimaryDark"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageCheckCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20_dp"
            android:layout_marginStart="@dimen/margin_20_dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/ic_check_circle" />

        <TextView
            android:id="@+id/textConfirmationAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10_dp"
            android:layout_marginStart="@dimen/margin_10_dp"
            android:lineSpacingExtra="3sp"
            android:text="@string/login_confirm_action"
            android:textAppearance="@style/TextAppearance.Regular"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_14_sp"
            app:layout_constraintLeft_toRightOf="@+id/imageCheckCircle" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
