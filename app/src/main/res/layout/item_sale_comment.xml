<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardView.Light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_10_dp"
    android:layout_marginEnd="@dimen/margin_15_dp"
    android:layout_marginLeft="@dimen/margin_15_dp"
    android:layout_marginRight="@dimen/margin_20_dp"
    android:layout_marginStart="@dimen/margin_20_dp"
    android:layout_marginTop="@dimen/margin_10_dp"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="3dp"
    app:cardElevation="@dimen/margin_10_dp">

    <LinearLayout
        android:id="@+id/itemSaleCommentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemSaleCommentTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_15_dp"
            android:paddingEnd="@dimen/margin_10_dp"
            android:paddingLeft="@dimen/margin_20_dp"
            android:paddingRight="@dimen/margin_10_dp"
            android:paddingStart="@dimen/margin_20_dp"
            android:paddingTop="@dimen/margin_15_dp"
            android:textAppearance="@style/TextAppearance.Regular"
            android:textColor="@color/gray_4A4A4A"
            android:textSize="@dimen/text_size_14_sp"
            tools:text="Ta maluca? Aqui perto de casa ta R$ 1,99" />

        <include
            android:id="@+id/viewItemAuthorBottomLayout"
            layout="@layout/view_item_author_bottom_layout" />

    </LinearLayout>
</android.support.v7.widget.CardView>