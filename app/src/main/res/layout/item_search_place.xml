<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/itemSearchPlaceContainerConstraintLayout"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/itemSearchPlaceNameTextView"
        style="@style/TextAppearance.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_40_dp"
        android:layout_marginStart="@dimen/margin_40_dp"
        android:layout_marginTop="@dimen/margin_15_dp"
        android:textColor="@color/gray_4A4A4A"
        android:textSize="@dimen/text_size_14_sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Pão De Açúcar - Clodomiro Amazonas" />

    <TextView
        android:id="@+id/itemSearchPlaceAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_40_dp"
        android:layout_marginStart="@dimen/margin_40_dp"
        android:textColor="@color/gray_737373"
        android:textSize="@dimen/text_size_12_sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemSearchPlaceNameTextView"
        tools:text="Rua Clodomiro Amazona, 995, São Paulo" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_15_dp"
        android:background="@color/gray_E0E0E0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemSearchPlaceAddressTextView" />


</android.support.constraint.ConstraintLayout>